{
    "name": "jimigrunge/phpshell",
    "description": "This is just a basic php skeleton with PSR-4 autoloading",
    "authors": [
        {
            "name": "James Grundner",
            "email": "james@jgrundner.com",
            "homepage": "http://jgrundner.com",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "james@jgrundner.com"
    },
    "license": "MIT",
    "minimum-stability": "dev",
    "require" : {
        "php" : "^7.2",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "App\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
      "start": "php -S 127.0.0.1:8080 -t public"
    },
    "config": {
      "process-timeout": 0
    }
}